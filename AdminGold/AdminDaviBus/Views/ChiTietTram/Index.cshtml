@model IEnumerable<AdminGold.Models.DMTUYENCHITIETTRAM>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Danh sách chi tiết trạm</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @Html.ActionLink("Thêm tài xế", "Create", "ChiTietTram", "", htmlAttributes: new { @class = "btn btn-primary" })
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Mã tuyến</th>
                                <th>Mã trạm</th>
                                <th>Trạm đầu</th>
                                <th>Trạm cuối</th>
                             
                                <th></th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {


                                <tr class="odd gradeX">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IDTUYEN)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MATRAM)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TRAMDAU)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TRAMCUOI)
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Edit", "ChiTietTram", new { id = item.ID })" class="btn btn-default btn-xs">Sửa</a>
                                        <a href="@Url.Action("Delete", "ChiTietTram", new { id = item.ID })" onclick="return confirm('Bạn có muốn xóa không?');" class="btn btn-default btn-xs">Xóa</a>

                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>



