@model IEnumerable<AdminGold.Models.LOTRINHCHOXE>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Danh sách tài xế</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @Html.ActionLink("Thêm lộ trình", "Create", "LoTrinhChoXe", "", htmlAttributes: new { @class = "btn btn-primary" })
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Mã xe</th>
                                <th>Mã tuyến</th>
                                <th>Mã tài xế</th>
                                <th>Cấm</th>
                                <th>Kích hoạt</th>
                               
                                <th></th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {


                                <tr class="odd gradeX">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MAXE)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IDTUYEN)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MATAIXE)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CAM)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.KICHHOAT)
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Edit", "LoTrinhChoXe", new { id = item.IDLOTRINH })" class="btn btn-default btn-xs">Sửa</a>
                                        <a href="@Url.Action("Delete", "LoTrinhChoXe", new { id = item.IDLOTRINH })" onclick="return confirm('Bạn có muốn xóa không?');" class="btn btn-default btn-xs">Xóa</a>

                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>


