@model AdminGold.Models.DMTAIXE
<div class="row">
    <div class="col-lg-6">
        <div class="form-group">
            <label>Mã tài xế</label>
            @Html.EditorFor(model => model.MATAIXE, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MATAIXE, "", htmlAttributes: new { @style = "color: blue;" })

        </div>
        <div class="form-group">
            <label>Tên</label>
            @Html.EditorFor(model => model.TENTAIXE, new { htmlAttributes = new { @class = "form-control" } })
           
        </div>
        <div class="form-group">
            <label>Loại bằng lái</label>
            @Html.EditorFor(model => model.BANGLAI, new {htmlAttributes = new {@class = "form-control"}})

        </div>
        <div class="form-group">
            <label>Email</label>
            @Html.EditorFor(model => model.EMAIL, new { htmlAttributes = new { @class = "form-control" } })

        </div>
    </div>

    <div class="col-lg-6">
        <div class="form-group">
            <label>Số điện thoại</label>
            @Html.EditorFor(model => model.BANGLAI, new { htmlAttributes = new { @class = "form-control" } })

        </div>
        <div class="form-group">
            <label>Tuổi</label>
            @Html.EditorFor(model => model.TUOI, new {htmlAttributes = new {@class = "form-control"}})

        </div>
        <div class="form-group">
            <label>Giới tính</label>
            @Html.DropDownListFor(model => model.GIOITINH, new List<SelectListItem>
            {
                new SelectListItem {Text = "Nữ", Value = "0"},
                new SelectListItem {Text = "Nam", Value = "1"},

            }, new {@class = "form-control",})


        </div>
        <div class="form-group">
            <label>Địa chỉ</label>
            @Html.EditorFor(model => model.DIACHINOIO, new { htmlAttributes = new { @class = "form-control" } })

        </div>
    </div>
</div>
@Html.HiddenFor(x => x.MATAIXE)
