@model IEnumerable<AdminGold.Models.DMTAIXE>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Danh sách tài xế</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @Html.ActionLink("Thêm tài xế", "Create", "DmTaiXe", "", htmlAttributes: new { @class = "btn btn-primary" })
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Mã tài xế</th>
                                <th>Tên tài xế</th>
                                <th>Tuổi</th>
                                <th>Giớ tính</th>
                                <th>Loại bằng lái</th>
                                <th>Số điện thoại</th>
                                <th>Địa chỉ</th>
                                <th>Email</th>
                                <th></th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {


                                <tr class="odd gradeX">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MATAIXE)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TENTAIXE)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TUOI)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.GIOITINH)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BANGLAI)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SDT)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DIACHINOIO)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EMAIL)
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Edit", "DmTaiXe", new { id = item.MATAIXE })" class="btn btn-default btn-xs">Sửa</a>
                                        <a href="@Url.Action("Delete", "DmTaiXe", new { id = item.MATAIXE })" onclick="return confirm('Bạn có muốn xóa hóa đơn không?');" class="btn btn-default btn-xs">Xóa</a>

                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>







