@model AdminGold.Models.AllModel
<div class="row">
    <div class="col-lg-6">
        <div class="form-group">
            <label>Mã xe</label>
            @Html.DropDownListFor(m => m.DmHoaDon.MAXE, new SelectList(Model.ListDmXe, "MAXE", "SOXE", "Chọn xe"), new { @class = "form-control" })


         

        </div>
        <div class="form-group">
            <label>Ký hiệu vé</label>
            @Html.EditorFor(model => model.DmHoaDon.KYHIEUVE, new {htmlAttributes = new {@class = "form-control"}})
            @Html.ValidationMessageFor(model => model.DmHoaDon.KYHIEUVE, "", htmlAttributes: new {@style = "color: blue;"})

        </div>
       
    </div>

    <div class="col-lg-6">
        <div class="form-group">
            <label>Mẫu so</label>
            @Html.EditorFor(model => model.DmHoaDon.MAUSO, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DmHoaDon.MAUSO, "", htmlAttributes: new { @style = "color: blue;" })

        </div>
        <div class="form-group">
            <label>Tổng số vé phát hành</label>
            @Html.EditorFor(model => model.DmHoaDon.TONGSOVEPHATHANH, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DmHoaDon.TONGSOVEPHATHANH, "", htmlAttributes: new { @style = "color: blue;" })

        </div>
    </div>
</div>
@Html.HiddenFor(x=>x.DmHoaDon.IDHOADON)
@Html.HiddenFor(x=>x.DmHoaDon.SOVEHIENTAI)
@Html.HiddenFor(x=>x.DmHoaDon.IDVE)