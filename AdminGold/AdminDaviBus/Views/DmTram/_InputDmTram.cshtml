@using System.Configuration
@model AdminGold.Models.DMTRAM
<div class="row">
    <div class="col-lg-6">
        <div class="form-group">
            <label>Mã trạm</label>
            @Html.EditorFor(model => model.MATRAM, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MATRAM, "", htmlAttributes: new { @style = "color: blue;" })

        </div>
        <div class="form-group">
            <label>Tên Trạm</label>
            @Html.EditorFor(model => model.TENTRAM, new { htmlAttributes = new { @class = "form-control" } })

        </div>
       
    </div>

    <div class="col-lg-6">
        <div class="form-group">
            <label>Tọa độ</label>
            @Html.EditorFor(model => model.LatLng, new { htmlAttributes = new { @class = "form-control" } })

        </div>
        <div class="form-group">
            <label>File</label>
            <div class="uploadBox">
                <a href="javascript:void(0)" id="uploadIcon" class="btn btnUpload">
                    + UpLoad File
                </a>
                Hỗ trợ định dạng .doc, .docx, .pdf nhỏ hơn 3MB.
                <input type="file" style="display: none" value="upload" name="FileTram" accept="application/msword,application/pdf,application/vnd.openxmlformats-officedocument.wordprocessingml.document" class="uploadFile" />
                <div class="viewFile" style="padding-top: 5px">
                  
                </div>
            </div>


        </div>
    </div>
</div>
@Html.HiddenFor(x => x.ID)


