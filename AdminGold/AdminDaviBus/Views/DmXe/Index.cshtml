@model IEnumerable<AdminGold.Models.DMXE>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Danh sách xe</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @Html.ActionLink("Thêm xe", "Create", "DmXe", "", htmlAttributes: new { @class = "btn btn-primary" })
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                        <tr>
                            <th>Mã xe</th>
                            <th>Số xe</th>
                            <th>Loại xe</th>
                            <th>Mã tài xế</th>
                            <th>Số ghế</th>

                            <th></th>

                        </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {


                                <tr class="odd gradeX">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MAXE)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SOXE)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LOAIXE)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MATAIXE)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SOGHE)
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Edit", "DmXe", new {id = item.MAXE})" class="btn btn-default btn-xs">Sửa</a>
                                        <a href="@Url.Action("Delete", "DmXe", new {id = item.MAXE})" onclick=" return confirm('Bạn có muốn xóa hóa đơn không?'); " class="btn btn-default btn-xs">Xóa</a>

                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>




