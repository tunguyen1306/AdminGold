@using System.Configuration
@model IEnumerable<AdminGold.Models.AllModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">List News</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @Html.ActionLink("Add News", "CreateProduct", "WebCoin", "", htmlAttributes: new { @class = "btn btn-primary" })
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Images</th>
                               
                                <th>Name</th>
                                <th>Category</th>
                                <th>Type</th>
                                <th>Status</th>
                             
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr class="odd gradeX">
                                    <td><img width="50" src="@ConfigurationManager.AppSettings["domain"]@item.TblPicture.OriginalFilepath.ToString().Split('_')[0]/@item.TblPicture.OriginalFilepath" alt="@item.TblProduct.NameProducts" /> </td>
                                  
                                    <td>@item.TblProduct.NameProducts</td>
                                    <td>
                                        @item.TblMenu.NameMenu

                                    </td>
                                    <td>
                                        
                                        @{
                                            switch (item.TblProduct.IdTypeProducts)
                                            {
                                                case 1:
                                                    @("1.Tin tức đặc biệt");
                                                    break;
                                                case 2:
                                                    @("2.Tin tức phổ biến");
                                                    break;
                                                case 3:
                                                    @("3.Các loại tiền ảo");
                                                    break;
                                                case 4:
                                                    @("4.Kiến thức tiền ảo");
                                                    break;
                                                case 5:
                                                    @("5.Đào bitcoin - tiền ảo");
                                                    break;

                                            }

                                        }

                                    </td>
                                    <td>

                                        @if (item.TblProduct.StatusProducts == 1)
                                        {
                                            @("Hoạt động")
                                        }
                                                    @if (item.TblProduct.StatusProducts == 0)
                                        {
                                            @("Không hoạt động")
                                        }
                                    </td>



                                    <td>
                                        <a href="@Url.Action("EditProduct", "WebCoin", new { id = item.TblProduct.IdProducts })" class="btn btn-default btn-xs">Sửa</a>
                                        <a href="@Url.Action("DeleteProduct", "WebCoin", new { id = item.TblProduct.IdProducts })" onclick="return confirm('Bạn có muốn xóa sản phẩm không?');" class="btn btn-default btn-xs">Xóa</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
