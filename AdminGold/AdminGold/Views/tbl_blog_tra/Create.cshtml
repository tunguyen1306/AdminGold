@model AdminGold.Models.tbl_blog_tra

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/ckeditor/ckeditor.js"></script>
<script src="~/ckeditor/adapters/jquery.js"></script>
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Đăng tin Blog</h1>
    </div>

</div>


@using (Html.BeginForm("Create", "tbl_blog_tra"))
{ 

    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">

                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Tiêu đề </label>
                                <input class="form-control" name="titile_blog_tra" id="txtTitleBlog">
                            </div>
                            <div class="form-group">
                                <label>Hình đại diện </label>
                                <div class="row">
                                    <div class="col-lg-10">
                                        <input class="form-control" type="file">
                                    </div>
                                    <div class="col-lg-2">
                                        <input type="button" value="Up ảnh"/>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                              
                                <label>Lấy link hình </label>
                                <div class="row">
                                    <form id="data" method="post" enctype="multipart/form-data">
                                        <div class="col-lg-12">
                                            <input class="form-control" id="getLinkFile" type="file">
                                            <label class="link"></label>
                                        </div>
                                       
                                        
                                    </form>
                                </div>
                            </div>
                                </div>
                                <div class="col-lg-6">

                                    <div class="form-group">
                                        <label>Loại</label>
                                        <select class="form-control" name="type_blog_tra">
                                            <option value="1">Hoạt động</option>
                                            <option value="0">Không hoạt động</option>

                                        </select>

                                    </div>
                                    <div class="form-group">
                                        <label>Trạng thái</label>

                                        <select class="form-control" name="status_blog_tra">
                                            <option value="1">Hoạt động</option>
                                            <option value="0">Không hoạt động</option>

                                        </select>

                                    </div>
                                </div>
                            </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label>Mô tả tóm tắt</label>
                                <textarea class="form-control" name="short_des_blog_tra" id="txtShortDesBlog"></textarea>


                            </div>
                        </div>
                     
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label>Mô tả </label>
                                @*<textarea class="form-control" name="des_blog_tra" id="txtDesBlog"></textarea>*@
                                @Html.TextAreaFor(x => x.des_blog_tra,htmlAttributes:new {@id= "txtDesBlog" ,@name= "des_blog_tra",@class="form-control" })

                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            
                        </div>
                        <div class="col-lg-6">

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <button type="submit" class="btn btn-default">Thêm</button>
                                    <a href="#" class="btn btn-primary">Hủy</a>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->

    <!-- /.row -->
}


<script>
    $(function () {
        $('#txtDesBlog').ckeditor({
            filebrowserImageUploadUrl: '/ckfinder/core/connector/php/connector.php?command=QuickUpload&type=Images'
        });

    });

    function getLink(e) {
        var t = $('#getLinkFile').val();
        $.ajax({
            url: '@Url.Action("GetLink", "tbl_blog_tra")',
            type: 'POST',
            data: { file: t },
            async: false,
            success: function (data) {

                console.log(data);
                $('.link').text(data);
            },
            enctype: 'multipart/form-data',
            cache: false,
            contentType: false,
            processData: false
        });
    }
    $("#getLinkFile").change(function () {
        var data = new FormData();
        var files = $("#getLinkFile").get(0).files;
        if (files.length > 0) {
            data.append("HelpSectionImages", files[0]);
        }
        $.ajax({
            url: '@Url.Action("GetLink", "tbl_blog_tra")',
            type: "POST",
            processData: false,
            contentType: false,
            data: data,
            success: function (response) {
                //code after success
                console.log(response);
                $('.link').text(response);
            },
            error: function (er) {
                alert(er);
            }

        });
    });
     
</script>