
@{
    ViewBag.Title = "IndexVG";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using System.Configuration
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Danh sách sản phẩm</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @Html.ActionLink("Thêm Blog", "CreateVG", "tbl_blog_tra", "", htmlAttributes: new { @class = "btn btn-primary" })
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Hình</th>

                                <th>Tiêu đề</th>
                                <th>Loại</th>
                                <th>Trạng thái</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr class="odd gradeX">
                                    <td>

                                        @if (item.img_blog_tra != null)
                                        {
                                            <img width="50" src="@ConfigurationManager.AppSettings["domain"]@item.img_blog_tra.Split('_')[0]/@item.img_blog_tra" alt="@item.titile_blog_tra" />
                                        }
                                        else
                                        {
                                            <img width="50" src="/Content/no-image-available.jpg" alt="@item.titile_blog_tra" />
                                        }
                                    </td>
                                    <td>@item.titile_blog_tra</td>
                                    <td>@item.type_blog_tra</td>
                                    <td>

                                        @if (item.status_blog_tra == 1)
                                        {
                                            @("Hoạt động")
                                        }
                                        @if (item.status_blog_tra == 0)
                                        {
                                            @("Không hoạt động")
                                        }
                                    </td>


                                    <td>
                                        <a href="@Url.Action("EditVG", "tbl_blog_tra", new { id = item.id_blog_tra })" class="btn btn-default btn-xs">Sửa</a>
                                        <a href="@Url.Action("Delete", "tbl_blog_tra", new { id = item.id_blog_tra })" onclick="return confirm('Bạn có muốn xóa sản phẩm không?');" class="btn btn-default btn-xs">Xóa</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>


