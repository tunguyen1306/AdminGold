@model IEnumerable<AdminGold.Models.ProductsPicture>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using System.Configuration


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Danh sách sản phẩm</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @Html.ActionLink("Thêm sản phẩm", "Create", "UploadImg", "", htmlAttributes: new { @class = "btn btn-primary" })
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Hình</th>
                                <th>Mã</th>
                                <th>Tên sản phẩm</th>
                                <th>Loại</th>
                                <th>Giá</th>
                                <th>Trạng thái</th>
                                <th>Tiêu biểu</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr class="odd gradeX">
                                    <td><img width="50" src="@ConfigurationManager.AppSettings["domain"]@item.clPicture.originalFilepath.ToString().Split('_')[0]/@item.clPicture.originalFilepath" alt="@item.tblProducts.name_products_tra" /> </td>
                                    <td>@item.tblProducts.code_products_tra</td>
                                    <td>@item.tblProducts.name_products_tra</td>
                                    <td>@item.tblProducts.type_products_tra</td>
                                    <td>@item.tblProducts.oldprice_products_tra</td>
                                    <td>@item.tblProducts.status_products_tra</td>
                                    <td>@item.tblProducts.featured_products_tra</td>
                                    <td>
                                    <a href="@Url.Action("Edit","Products",new { id=item.tblProducts.id_products_tra})" class="btn btn-default btn-xs">Sửa</a> 
                                        <a href="@Url.Action("Delete","Products",new { id=item.tblProducts.id_products_tra})" onclick="return confirm('Bạn có muốn xóa sản phẩm không?');" class="btn btn-default btn-xs">Xóa</a>
                                    </td>
                                    </tr>
                            }




                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
