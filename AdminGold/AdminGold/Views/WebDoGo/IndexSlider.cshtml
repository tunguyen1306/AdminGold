@model IEnumerable<AdminGold.Models.web_vangia_silde>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using System.Configuration
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Danh sách  Slider</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @Html.ActionLink("Thêm Slider", "CreateSlider", "WebDoGo", "", htmlAttributes: new { @class = "btn btn-primary" })
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Hình</th>

                                <th>Tiêu đề</th>

                                <th>Trạng thái</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr class="odd gradeX">
                                    <td>

                                        @if (item.vangia_img_silde != null)
                                        {
                                            <img width="50" src="@ConfigurationManager.AppSettings["domain"]@item.vangia_img_silde.Split('_')[0]/@item.vangia_img_silde" alt="@item.vangia_name_silde" />
                                        }
                                        else
                                        {
                                            <img width="50" src="/Content/no-image-available.jpg" alt="@item.vangia_name_silde" />
                                        }
                                    </td>
                                    <td>@item.vangia_name_silde</td>

                                    <td>

                                        @if (item.vangia_status_silde == 1)
                                        {
                                            @("Hoạt động")
                                        }
                                        @if (item.vangia_status_silde == 0)
                                        {
                                            @("Không hoạt động")
                                        }
                                    </td>


                                    <td>
                                        <a href="@Url.Action("EditSlider", "WebDoGo", new { id = item.vangia_id_silde })" class="btn btn-default btn-xs">Sửa</a>
                                        <a href="@Url.Action("DeleteSlider", "WebDoGo", new { id = item.vangia_id_silde })" onclick="return confirm('Bạn có muốn xóa sản phẩm không?');" class="btn btn-default btn-xs">Xóa</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
