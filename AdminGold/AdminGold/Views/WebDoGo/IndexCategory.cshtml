@model IEnumerable<AdminGold.Models.web_vangia_category>
@{
    ViewBag.Title = "IndexCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Danh sách danh mục sản phẩm</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @Html.ActionLink("Thêm danh mục", "CreateCategory", "WebDoGo", "", htmlAttributes: new { @class = "btn btn-primary" })
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Id</th>

                                <th>Tên</th>
                                <th>Link</th>
                                <th>Trạng thái</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr class="odd gradeX">
                                    <td>
@item.Id
                                    </td>
                                    <td>@item.Name</td>
                                    <td>@item.Link</td>
                                    <td>

                                        @if (item.Status == 1)
                                        {
                                            @("Hoạt động")
                                        }
                                        @if (item.Status == 0)
                                        {
                                            @("Không hoạt động")
                                        }
                                    </td>


                                    <td>
                                        <a href="@Url.Action("EditCategory", "WebDoGo", new { id = item.Id })" class="btn btn-default btn-xs">Sửa</a>
                                        <a href="@Url.Action("DeleteCategory", "WebDoGo", new { id = item.Id })" onclick="return confirm('Bạn có muốn xóa sản phẩm không?');" class="btn btn-default btn-xs">Xóa</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
